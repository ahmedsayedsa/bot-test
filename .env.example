# إعدادات الخادم
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# إعدادات Easy Order API
# يجب الحصول على هذه المعلومات من فريق Easy Order
EASY_ORDER_API_URL=https://your-easyorder-domain.com/api
EASY_ORDER_API_KEY=your-api-key-here

# إعدادات WhatsApp (اختياري)
WHATSAPP_SESSION_ID=auto-service-bot

# إعدادات الأمان (اختياري)
API_SECRET=your-secret-key-for-webhook-security

# إعدادات التشغيل
AUTO_CLEANUP_HOURS=24
MAX_PENDING_ORDERS=1000
BROADCAST_DELAY_MS=1000

# إعدادات إضافية للبوت المحسن
MAX_RETRIES=5
CONNECTION_TIMEOUT=60000
KEEP_ALIVE_INTERVAL=10000
ORDER_TIMEOUT_HOURS=1

# إعدادات التسجيل
LOG_LEVEL=info
LOG_FILE=bot.log

# إعدادات Easy Order API البديلة (في حالة وجود عدة endpoints)
EASY_ORDER_BACKUP_URL=https://backup-easyorder-domain.com/api
EASY_ORDER_WEBHOOK_SECRET=webhook-secret-key

# إعدادات الرسائل المخصصة
WELCOME_MESSAGE=مرحباً بك في اوتو سيرفس
CONFIRMATION_MESSAGE=تم تأكيد طلبك بنجاح
CANCELLATION_MESSAGE=تم إلغاء طلبك

# إعدادات المطورين (للاختبار)
DEBUG_MODE=false
TEST_PHONE_NUMBER=201234567890

